<div class="container">
  <h1 class="text-center m-5"><%= @coach.email %></h1>
  <div class="row">
    <div class="col-6">

      <%= image_tag @coach.photo_url, class:"bigvignette" %>

    </div>
    <div class="col-6">

      <p>Choisissez votre date:</p>
      <input type="date" class="datepicker m-3" name="name" required
            minlength="4" maxlength="8" size="10">
      <p>Prix: <%= humanized_money_with_symbol(@coach.price) %></p>
      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'coach_id', @coach.id %>
          <%= submit_tag 'Valider', class: 'btn btn-primary mb-5' %>
      <% end %>
      <%= link_to "Retour", steps_path(anchor: Step.find(current_user.step_id).position), class:"btn btn-primary mb-5" %>
    </div>
  </div>
</div>
