<div class="container">
  <h1 class="p-5"><%= @article.title %></h1>
  <%= image_tag @article.image, class:"vignette bigvignette mr-5 mb-5" %>
  <% paragraphe = @article.content.split(".") %>
  <% paragraphe.map! { |ligne| ligne + "."} %>
  <% paragraphe.each_slice(3) do |phrase| %>
    <p class="text-justify"><%= phrase.join(" ") %></p><br>
  <% end %>
  <%= link_to "Retour", steps_path(anchor: Step.find(current_user.step_id).position), class:"btn btn-show" %>
</div>
