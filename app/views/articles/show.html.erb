<div class="container">
  <div class="container text-center">
    <h1 class="p-5"><%= @article.title %></h1>
  </div>
  <div class="container-fluid banner">
    <%= image_tag @article.image %>
  </div>
  <div class="container">
    <% paragraphe = @article.content.split(".") %>
    <% paragraphe.map! { |ligne| ligne + "."} %>
    <% paragraphe.each_slice(3) do |phrase| %>
      <p class="text-justify"><%= phrase.join(" ") %></p><br>
    <% end %>
  </div>
  <%= link_to "Retour", steps_path(anchor: "my_target"), class:"btn btn-show" %>
</div>
